.uni-swipe-action--show {
    position: relative;
    z-index: 1000;
}
.uni-swipe-action--btn {
    padding: 0 32rpx;
    color: #ffffff;
    background-color: #c7c6cd;
    font-size: 28rpx;
    display: -webkit-inline-box;
    display: -webkit-inline-flex;
    display: -ms-inline-flexbox;
